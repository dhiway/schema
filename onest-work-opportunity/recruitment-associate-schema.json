{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recruitment Associate Profile Schema",
  "description": "Complete profile schema for recruitment associate role",
  "type": "object",
  "properties": {
    "whoIAm": {
      "type": "object",
      "title": "Who I Am",
      "description": "Basic personal information",
      "properties": {
        "name": {
          "type": "string",
          "title": "Full Name",
          "description": "Enter your full name",
          "required": true,
          "ui:widget": "text",
          "ui:placeholder": "Enter your full name",
          "ui:disabled": false,
          "ui:verified": false,
          "ui:verificationMessage": "✓ Verified from DigiLocker"
        },
        "location": {
          "type": "string",
          "title": "Location",
          "description": "Your current location",
          "required": true,
          "ui:widget": "text",
          "ui:placeholder": "Enter your current location",
          "ui:disabled": false,
          "ui:hasLocationButton": true
        },
        "phone": {
          "type": "string",
          "title": "Phone Number",
          "description": "Your contact phone number",
          "required": true,
          "pattern": "^[0-9]{10}$",
          "ui:widget": "tel",
          "ui:placeholder": "Enter phone number",
          "ui:disabled": false,
          "ui:verified": false
        },
        "age": {
          "type": "integer",
          "title": "Age",
          "description": "Your age",
          "minimum": 18,
          "maximum": 65,
          "ui:widget": "number",
          "ui:placeholder": "Enter your age",
          "ui:disabled": false
        }
      },
      "required": ["name", "location", "phone"],
      "ui": {
        "order": ["name", "location", "phone", "age"],
        "description": "Enter your basic details or import from DigiLocker for quick setup",
        "showDigiLocker": true,
        "digiLockerConfig": {
          "title": "Quick Import from DigiLocker",
          "description": "Import verified documents to auto-fill your profile information",
          "buttonText": "Import from DigiLocker",
          "footerText": "This will import your AADHAAR, name, date of birth and other verified details"
        }
      }
    },
    "whatIHave": {
      "type": "object",
      "title": "What I Have",
      "description": "Your qualifications, skills, and experience",
      "properties": {
        "highestEducationalQualification": {
          "type": "array",
          "title": "Highest Educational Qualification",
          "description": "Select your highest educational qualification(s)",
          "enum": ["12th Pass", "Graduate-B.Tech/B.E.", "Graduate-MBA HR", "Graduate-Other", "Other"],
          "enumNames": ["12th Pass", "Graduate-B.Tech/B.E.", "Graduate-MBA HR", "Graduate-Other", "Other"],
          "ui:widget": "multiselect-dropdown",
          "ui:placeholder": "Select your qualifications",
          "ui:disabled": false,
          "ui:hasOther": true
        },
        "hrKnowledge": {
          "type": "array",
          "title": "HR Knowledge",
          "description": "Select your HR knowledge areas",
          "enum": [
            "None",
            "HR Statuatory Compliances", 
            "PF Calculation certification", 
            "EQ/IQ theory certification", 
            "Latest HR trends certification", 
            "MS Office", 
            "HRMS Tools", 
            "Other"
          ],
          "enumNames": [
            "None",
            "HR Statuatory Compliances", 
            "PF Calculation certification", 
            "EQ/IQ theory certification", 
            "Latest HR trends certification", 
            "MS Office", 
            "HRMS Tools", 
            "Other"
          ],
          "ui:widget": "multiselect-dropdown",
          "ui:placeholder": "Select your HR knowledge areas",
          "ui:disabled": false,
          "ui:hasOther": true
        },
        "hrWorkExperience": {
          "type": "array",
          "title": "HR Work Experience",
          "description": "Select your HR work experience",
          "enum": ["No preference", "Yes-Internship", "Yes-Job", "Yes-other", "Other"],
          "enumNames": ["No preference", "Yes-Internship", "Yes-Job", "Yes-other", "Other"],
          "ui:widget": "multiselect-dropdown",
          "ui:placeholder": "Select your work experience",
          "ui:disabled": false,
          "ui:hasOther": true
        },
        "communicationSkills": {
          "type": "string",
          "title": "Communication Skills Score",
          "description": "Enter communication skills score",
          "ui:widget": "text",
          "ui:placeholder": "Enter communication skills score",
          "ui:disabled": false
        },
        "taskVideo": {
          "type": "string",
          "title": "Task Upload",
          "description": "Upload any file (document, image, video) showing your work",
          "ui:widget": "file-upload",
          "ui:placeholder": "Upload file showing your work",
          "ui:disabled": false,
          "ui:accept": "*/*",
          "ui:noSizeLimit": true
        },
        "qrCodeScan": {
          "type": "string",
          "title": "Scan QR code",
          "description": "Scan QR code for additional information",
          "ui:widget": "qr-scanner",
          "ui:placeholder": "Scan QR code",
          "ui:disabled": false
        }
      },
      "ui": {
        "order": [
          "highestEducationalQualification",
          "hrKnowledge",
          "hrWorkExperience",
          "communicationSkills",
          "taskVideo",
          "qrCodeScan"
        ],
        "description": "Add your qualifications, skills, and work history",
        "sections": [
          {
            "title": "Basic Information",
            "fields": ["age"]
          },
          {
            "title": "Education & Knowledge",
            "fields": ["highestEducationalQualification", "hrKnowledge"]
          },
          {
            "title": "Experience & Skills",
            "fields": ["hrWorkExperience", "communicationSkills"]
          },
          {
            "title": "Media & Verification",
            "fields": ["taskVideo", "qrCodeScan"]
          }
        ]
      }
    },
    "whatIWant": {
      "type": "object",
      "title": "What I Want",
      "description": "Your salary expectations and work preferences",
      "properties": {
        "distanceRadiusRelocation": {
          "type": "string",
          "title": "Distance Radius for Re-location Readiness",
          "description": "How far are you willing to relocate for work?",
          "enum": [
            "No",
            "Yes - <=100 Kms",
            "Yes <= 500 Kms",
            "Yes - <= 1000 Kms",
            "Yes - > 1000 Kms"
          ],
          "enumNames": [
            "No",
            "Yes - <=100 Kms", 
            "Yes <= 500 Kms",
            "Yes - <= 1000 Kms",
            "Yes - > 1000 Kms"
          ],
          "ui:widget": "select",
          "ui:placeholder": "Select relocation preference",
          "ui:disabled": false
        },
        "workHoursPerDay": {
          "type": "integer",
          "title": "Number hours willing to work / day",
          "description": "How many hours are you willing to work per day?",
          "minimum": 1,
          "maximum": 24,
          "ui:widget": "number",
          "ui:placeholder": "Enter hours per day",
          "ui:disabled": false
        },
        "preferredModeOfWork": {
          "type": "string",
          "title": "Preferred mode of work",
          "description": "Select your preferred work mode",
          "enum": [
            "On-site-no shift",
            "On-site-shifts", 
            "Remote", 
            "Hybrid", 
            "Travelling"
          ],
          "enumNames": [
            "On-site-no shift",
            "On-site-shifts", 
            "Remote", 
            "Hybrid", 
            "Travelling"
          ],
          "ui:widget": "select",
          "ui:placeholder": "Select work mode preference",
          "ui:disabled": false
        },
        "monthlyInHandPreferred": {
          "type": "integer",
          "title": "Monthly In-hand Preferred (INR)",
          "description": "Your expected monthly in-hand salary in INR",
          "minimum": 0,
          "ui:widget": "number",
          "ui:placeholder": "Enter expected monthly salary",
          "ui:currency": "₹",
          "ui:disabled": false
        },
        "monthlyPFHealthInsurance": {
          "type": "string",
          "title": "Monthly PF & Health Insurance",
          "description": "Do you want PF & Health Insurance benefits?",
          "enum": ["Yes", "No"],
          "enumNames": ["Yes", "No"],
          "ui:widget": "select",
          "ui:placeholder": "Select PF & Health Insurance preference",
          "ui:disabled": false
        }
      },
      "ui": {
        "order": [
          "distanceRadiusRelocation",
          "workHoursPerDay",
          "preferredModeOfWork",
          "monthlyInHandPreferred",
          "monthlyPFHealthInsurance"
        ],
        "description": "Tell us about your salary expectations and work preferences",
        "sections": [
          {
            "title": "Work & Location Preferences",
            "fields": ["distanceRadiusRelocation", "workHoursPerDay", "preferredModeOfWork"]
          },
          {
            "title": "Salary & Benefits",
            "fields": ["monthlyInHandPreferred", "monthlyPFHealthInsurance"]
          }
        ]
      }
    }
  },
  "ui": {
    "steps": [
      {
        "id": "whoIAm",
        "title": "Who I Am",
        "description": "Basic personal information",
        "icon": "User"
      },
      {
        "id": "whatIHave",
        "title": "What I Have",
        "description": "Qualifications, skills, and experience",
        "icon": "Briefcase"
      },
      {
        "id": "whatIWant",
        "title": "What I Want",
        "description": "Salary expectations and preferences",
        "icon": "Target"
      }
    ]
  }
} 