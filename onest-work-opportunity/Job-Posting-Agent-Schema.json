{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job Posting Schema",
  "type": "object",
  "properties": {
    "agentId": { "type": "string" },
    "name": { "type": "string" },
    "phoneNumber": { "type": "string" },
    "jobProviderName": { "type": "string" },
    "title": {
      "type": "string",
      "enum": [
        "Fitter",
        "Electrician",
        "Machine Operator",
        "Mechanic",
        "ITI (Other)"
      ]
    },
    "positions": { "type": "integer", "minimum": 1 },
    "monthly_salary": { "type": "number", "minimum": 0 },
    "location": { "type": "string" }
  },
  "required": ["name", "phoneNumber", "title"],
  "additionalProperties": false
}

