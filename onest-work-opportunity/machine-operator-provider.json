{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "title": "Machine Operator Job Posting",
  "description": "Complete job posting form for Machine Operator positions",
  "properties": {
    "basicInfo": {
      "type": "object",
      "title": "Basic Information",
      "x-section": "basic-info",
      "properties": {
        "jobProviderName": {
          "type": "string",
          "title": "Job Provider Name",
          "description": "Enter job provider/company name",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderType": {
          "type": "string",
          "title": "Job Provider Type",
          "description": "Select the type of job provider"
        },
        "jobProviderRegistration": {
          "type": "string",
          "title": "Job Provider Registration Details",
          "description": "GST, CIN, TAN, PAN or other registration number",
          "minLength": 1,
          "pattern": "^.+$"
        },
        "jobProviderLocation": {
          "type": "string",
          "title": "Job Provider Location",
          "description": "Enter job provider location",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderLogo": {
          "type": "string",
          "title": "Job Provider Logo",
          "description": "Upload company logo (PNG, JPG, max 5MB)",
          "format": "data-url"
        }
      },
      "required": ["jobProviderName", "jobProviderLocation"]
    },
    "jobDetails": {
      "type": "object",
      "title": "Job Details",
      "x-section": "job-details",
      "properties": {
        "callBackTime": {
          "type": "string",
          "title": "Call Back Time",
          "description": "Enter the call back time"
        },
        "title": {
          "type": "string",
          "title": "Job Title",
          "description": "Job title (editable)",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "designation": {
          "type": "string",
          "title": "Designation",
          "description": "Enter the designation for the job position",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobType": {
          "type": "array",
          "title": "Job Type",
          "description": "Select the type of job (e.g., Full-time, Part-time, Contract)",
          "items": {
            "type": "string",
            "enum": ["Full-time", "Part-time", "Apprenticeship"],
            "enumNames": ["Full-time", "Part-time", "Apprenticeship"]
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "hiringUrgency": {
          "type": "string",
          "title": "Hiring Urgency",
          "description": "Select the urgency of hiring (e.g., Immediate, Within 1 month, Within 3 months)"
        },
        "hiringManagerName": {
          "type": "string",
          "title": "Hiring Manager Name",
          "description": "Enter the name of the hiring manager"
        },
        "hiringManagerDesignation": {
          "type": "string",
          "title": "Hiring Manager Designation",
          "description": "Enter the designation of the hiring manager"
        },
        "validTill": {
          "type": "string",
          "title": "Valid Till(dd-mm-yyyy)",
          "description": "Enter the date until which the job posting is valid",
          "format": "date"
        },
        "positions": {
          "type": "integer",
          "title": "Number of Openings",
          "description": "How many positions are available?",
          "minimum": 1,
          "default": 1
        },
        "jobDetailsVideo": {
          "type": "string",
          "title": "Job Details Video",
          "format": "data-url",
          "description": "Upload video explaining job details (MOV, AVI, MP4, MKV, WMV, max 50MB)"
        },
        "jobDescription": {
          "type": "string",
          "title": "Job Description",
          "description": "Provide a detailed description of the job responsibilities and requirements",
          "minLength": 10,
          "maxLength": 2000
        },
        "jobLocationPhotos": {
          "type": "array",
          "title": "Job Location Photos",
          "items": {
            "type": "string",
            "format": "data-url"
          },
          "description": "Upload photos of the job location (PNG, JPEG, JPG, max 5MB each)"
        },
        "workingHoursPerDay": {
          "type": "number",
          "title": "Working Hours Per Day",
          "description": "Enter working hours per day",
          "minimum": 1,
          "maximum": 24
        },
        "modeOfWork": {
          "type": "array",
          "title": "Mode of Work",
          "description": "Select mode of work (multiple selections allowed)",
          "items": {
            "type": "string",
            "enum": ["on-site-no-shift", "on-site-shifts", "remote", "hybrid", "travelling"],
            "enumNames": ["On-site-no shift - standard work timings every working day", "On-site-shifts - work timings can change as per the shift one is assigned to", "Remote - work from home, no office space provided", "Hybrid - option to work from home, but presence expected on-site as per a prescribed schedule","Travelling - on the road job, requires travel"]
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "minMonthlyInHand": {
          "type": "number",
          "title": "Monthly minimum in-hand salary (INR)",
          "description": "Enter minimum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "maxMonthlyInHand": {
          "type": "number",
          "title": "Monthly maximum in-hand salary (INR)",
          "description": "Enter maximum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "monthlyAttendanceBonus": {
          "type": "number",
          "title": "Monthly Attendance Bonus (INR)",
          "description": "Bonus Amount(INR)",
          "minimum": 0
        },
        "monthlyAttendanceBonusCriteria": {
          "type": "string",
          "title": "Monthly Attendance Bonus Criteria",
          "description": "Criteria (%)"
        },
        "monthlyAverageOT": {
          "type": "string",
          "title": "Monthly Average OT (Overtime) (INR)",
          "description": "Enter monthly average overtime amount"
        },
        "otPerHourRate": {
          "type": "number",
          "title": "Overtime Per Hour Rate (INR)",
          "description": "Enter overtime per hour rate",
          "minimum": 0
        },
         "monthlyPfEsicBenefits": {
          "type": "number",
          "title": "Monthly PF & ESIC Benefits (INR)",
          "description": "Enter monthly PF & ESIC benefits amount",
          "minimum": 0
        },
        "foodProvided": {
          "type": "string",
          "title": "Food Provided",
          "description": "Is food provided by the employer?",
          "enum": ["yes", "no"],
          "enumNames": ["Yes", "No"],
          "x-ui-widget": "radio"
        },
        "travelProvided": {
          "type": "string",
          "title": "Travel Provided",
          "description": "Is travel provided by the employer?"
        }
      },
      "required": ["title", "positions"]
    },
