{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recruitment Associate Job Posting",
  "type": "object",
  "properties": {
    "basicInfo": {
      "type": "object",
      "title": "Basic Information",
      "x-section": "basic-info",
      "properties": {
        "jobProviderName": {
          "type": "string",
          "title": "Job Provider Name",
          "description": "Enter job provider/company name",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderRegistration": {
          "type": "string",
          "title": "Job Provider Registration Details",
          "description": "GST, CIN, TAN, PAN or other registration number",
          "minLength": 1,
          "pattern": "^.+$"
        },
        "jobProviderLocation": {
          "type": "string",
          "title": "Job Provider Location",
          "description": "Enter job provider location",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderLogo": {
          "type": "string",
          "title": "Job Provider Logo",
          "description": "Upload company logo (PNG, JPG, max 5MB)",
          "format": "data-url"
        }
      },
      "required": ["jobProviderName", "jobProviderLocation"]
    },
    "jobDetails": {
      "type": "object",
      "title": "Job Details",
      "x-section": "job-details",
      "properties": {
        "title": {
          "type": "string",
          "title": "Job Name",
          "description": "Enter the job title/name",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "positions": {
          "type": "integer",
          "title": "Number of Openings",
          "description": "How many positions are available?",
          "minimum": 1,
          "default": 1
        },
        "jobDetailsVideo": {
          "type": "array",
          "title": "Job Details Video",
          "description": "Upload video explaining job details (MOV, AVI, MP4, MKV, WMV, max 50MB each)",
          "items": {
            "type": "string",
            "format": "data-url"
          },
          "maxItems": 2
        },
        "jobDetailsParagraph": {
          "type": "string",
          "title": "Job Details Paragraph",
          "description": "Provide detailed description of the job role and responsibilities",
          "minLength": 1
        },
        "jobLocationPhotos": {
          "type": "array",
          "title": "Job Location Photos",
          "description": "Upload photos of the job location (PNG, JPEG, JPG, max 5MB each)",
          "items": {
            "type": "string",
            "format": "data-url"
          },
          "maxItems": 5
        },
        "startTime": {
          "type": "string",
          "title": "Start Time",
          "description": "Enter the start time for work",
          "format": "time",
          "minLength": 1
        },
        "endTime": {
          "type": "string",
          "title": "End Time",
          "description": "Enter the end time for work",
          "format": "time",
          "minLength": 1
        },
        "modeOfWork": {
          "type": "string",
          "title": "Mode of Work",
          "enum": ["on-site-no-shift", "on-site-shifts", "remote", "hybrid", "travelling"],
          "enumNames": ["On-site - No Shift", "On-site - Shifts", "Remote", "Hybrid", "Travelling"],
          "description": "Select the mode of work"
        },
        "minMonthlyInHand": {
          "type": "number",
          "title": "Monthly minimum in-hand (INR)",
          "description": "Enter minimum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "maxMonthlyInHand": {
          "type": "number",
          "title": "Monthly maximum in-hand (INR)",
          "description": "Enter maximum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "monthlyMaxPerformanceBasedVariable": {
          "type": "number",
          "title": "Monthly MAX Performance Based Variable Accrued (INR)",
          "description": "Enter maximum performance based variable amount",
          "minimum": 0
        },
        "monthlyPfHealthInsurance": {
          "type": "number",
          "title": "Monthly PF & Health Insurance (INR)",
          "description": "Enter monthly PF & health insurance amount",
          "minimum": 0
        },
        "devicesProvided": {
          "type": "string",
          "title": "Devices Provided",
          "enum": ["no", "yes-pc", "yes-laptop", "yes-other"],
          "enumNames": ["No", "Yes - PC", "Yes - Laptop", "Yes - Other"],
          "description": "Select if devices are provided"
        },
        "devicesProvidedOther": {
          "type": "string",
          "title": "Other Device Details",
          "description": "Specify other device details"
        }
      },
      "dependencies": {
        "devicesProvided": {
          "oneOf": [
            {
              "properties": {
                "devicesProvided": { "enum": ["yes-other"] },
                "devicesProvidedOther": { "minLength": 1 }
              }
            },
            {
              "properties": {
                "devicesProvided": { "enum": ["no", "yes-pc", "yes-laptop"] }
              }
            }
          ]
        }
      }
    },
    "jobNeeds": {
      "type": "object",
      "title": "Job Needs",
      "x-section": "job-needs",
      "properties": {
        "ageAllowedLowerLimit": {
          "type": "integer",
          "title": "Age Allowed - Lower Limit",
          "description": "Enter minimum age",
          "minimum": 18,
          "maximum": 100
        },
        "ageAllowedUpperLimit": {
          "type": "integer",
          "title": "Age Allowed - Upper Limit",
          "description": "Enter maximum age",
          "minimum": 18,
          "maximum": 100
        },
        "locationPreference": {
          "type": "string",
          "title": "Location Preference",
          "enum": ["no-preference", "yes-50-kms", "yes-100-kms", "yes-1000-kms", "yes-1000-plus-kms"],
          "enumNames": ["No preference", "Yes - <=50 Kms", "Yes - <=100 Kms", "Yes - <=1000 Kms", "Yes - >1000 Kms"],
          "description": "Select location preference"
        },
        "educationalQualificationSubsection": {
          "type": "object",
          "title": "Educational Qualification",
          "x-subsection": "educational-qualification-subsection",
          "x-ui-subsection": "border",
          "properties": {
            "highestQualification": {
              "type": "array",
              "title": "Highest Qualification",
              "description": "Select highest qualification(s)",
              "items": {
                "type": "string",
                "enum": [
                  "12th-pass",
                  "graduate-btech-be",
                  "graduate-mba-hr",
                  "graduate-other"
                ],
                "enumNames": [
                  "12th Pass",
                  "Graduate - B.Tech/B.E.",
                  "Graduate - MBA HR",
                  "Graduate - Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "highestQualificationOther": {
              "type": "string",
              "title": "Other Qualification Details",
              "description": "Specify other qualification details"
            },
            "acceptableProofs": {
              "type": "array",
              "title": "Acceptable Proofs",
              "description": "Select acceptable proof types",
              "items": {
                "type": "string",
                "enum": [
                  "degree-certificate-aicte",
                  "provisional-degree-certificate-aicte",
                  "digilocker",
                  "other"
                ],
                "enumNames": [
                  "Degree certificate from any AICTE approved college",
                  "Provisional degree certificate from any AICTE approved college",
                  "Digilocker",
                  "Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "acceptableProofsOther": {
              "type": "string",
              "title": "Other Proof Type",
              "description": "Specify other proof type"
            },
            "uploadSampleMedia": {
              "type": "array",
              "title": "Sample Media for Each Acceptable Proof",
              "description": "Upload sample media for each acceptable proof (up to 5 files)",
              "items": {
                "type": "string",
                "format": "data-url"
              },
              "maxItems": 5
            }
          }
        },
        "hrKnowledgeSubsection": {
          "type": "object",
          "title": "HR Knowledge",
          "x-subsection": "hr-knowledge-subsection",
          "x-ui-subsection": "border",
          "properties": {
            "hrKnowledgePreferences": {
              "type": "array",
              "title": "HR Knowledge Preferences",
              "description": "Select HR knowledge preferences",
              "items": {
                "type": "string",
                "enum": [
                  "no-preference",
                  "hr-statutory-compliances",
                  "pf-calculation-certification",
                  "eq-iq-theory-certification",
                  "latest-hr-trends-certification",
                  "ms-office",
                  "hrms-tools",
                  "other"
                ],
                "enumNames": [
                  "No preference",
                  "HR Statutory Compliances",
                  "PF Calculation certification",
                  "EQ/IQ theory certification",
                  "Latest HR trends certification",
                  "MS Office",
                  "HRMS Tools",
                  "Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "hrKnowledgePreferencesOther": {
              "type": "string",
              "title": "Other HR Knowledge Details",
              "description": "Specify other HR knowledge details"
            },
            "acceptableProofs": {
              "type": "array",
              "title": "Acceptable Proofs",
              "description": "Select acceptable proof types",
              "items": {
                "type": "string",
                "enum": [
                  "college-transcript",
                  "skill-certification",
                  "other"
                ],
                "enumNames": [
                  "College transcript",
                  "Skill certification",
                  "Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "acceptableProofsOther": {
              "type": "string",
              "title": "Other Proof Type",
              "description": "Specify other proof type"
            },
            "uploadSampleMedia": {
              "type": "array",
              "title": "Sample Media for Each Acceptable Proof",
              "description": "Upload sample media for each acceptable proof (up to 5 files)",
              "items": {
                "type": "string",
                "format": "data-url"
              },
              "maxItems": 5
            }
          }
        },
        "hrWorkExperienceSubsection": {
          "type": "object",
          "title": "HR Work Experience",
          "x-subsection": "hr-work-experience-subsection",
          "x-ui-subsection": "border",
          "properties": {
            "hrWorkExperience": {
              "type": "array",
              "title": "HR Work Experience",
              "description": "Select HR work experience requirements",
              "items": {
                "type": "string",
                "enum": [
                  "no-preference",
                  "yes-internship",
                  "yes-job",
                  "yes-other"
                ],
                "enumNames": [
                  "No preference",
                  "Yes - Internship",
                  "Yes - Job",
                  "Yes - Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "hrWorkExperienceOther": {
              "type": "string",
              "title": "Other Work Experience Details",
              "description": "Specify other work experience details"
            },
            "acceptableProofs": {
              "type": "array",
              "title": "Acceptable Proofs",
              "description": "Select acceptable proof types",
              "items": {
                "type": "string",
                "enum": [
                  "internship-completion-certificate",
                  "work-ex-certificate",
                  "recommendation-letter",
                  "other"
                ],
                "enumNames": [
                  "Internship completion certificate",
                  "Work ex certificate",
                  "Recommendation letter",
                  "Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "acceptableProofsOther": {
              "type": "string",
              "title": "Other Proof Type",
              "description": "Specify other proof type"
            },
            "uploadSampleMedia": {
              "type": "array",
              "title": "Sample Media for Each Acceptable Proof",
              "description": "Upload sample media for each acceptable proof (up to 5 files)",
              "items": {
                "type": "string",
                "format": "data-url"
              },
              "maxItems": 5
            }
          }
        },
        "communicationSubsection": {
          "type": "object",
          "title": "Communication",
          "x-subsection": "communication-subsection",
          "x-ui-subsection": "border",
          "properties": {
            "minimumCommunicationSkillBenchmark": {
              "type": "string",
              "title": "Minimum Communication Skill Score",
              "description": "Enter the minimum acceptable communication skill score"
            },
            "acceptableProofs": {
              "type": "array",
              "title": "Acceptable Proofs",
              "description": "Select acceptable proof types",
              "items": {
                "type": "string",
                "enum": [
                  "skill-certification",
                  "video-proof",
                  "other"
                ],
                "enumNames": [
                  "Skill certification",
                  "Video proof",
                  "Other"
                ]
              },
              "uniqueItems": true,
              "minItems": 1
            },
            "acceptableProofsOther": {
              "type": "string",
              "title": "Other Proof Type",
              "description": "Specify other proof type"
            },
            "uploadSampleMedia": {
              "type": "array",
              "title": "Sample Media for Each Acceptable Proof",
              "description": "Upload sample media for each acceptable proof (up to 5 files)",
              "items": {
                "type": "string",
                "format": "data-url"
              },
              "maxItems": 5
            }
          }
        }
      }
    }
  }
}