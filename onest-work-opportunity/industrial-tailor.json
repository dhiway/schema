{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "title": "Industrial Tailor Job Posting",
  "description": "Complete job posting form for Industrial Tailor positions",
  "properties": {
    "basicInfo": {
      "type": "object",
      "title": "Basic Information",
      "x-section": "basic-info",
      "properties": {
        "jobProviderName": {
          "type": "string",
          "title": "Job Provider Name",
          "description": "Enter job provider/company name",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderRegistration": {
          "type": "string",
          "title": "Job Provider Registration Details",
          "description": "GST, CIN, TAN, PAN or other registration number",
          "minLength": 1,
          "pattern": "^.+$"
        },
        "jobProviderLocation": {
          "type": "string",
          "title": "Job Provider Location",
          "description": "Enter job provider location",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "jobProviderLogo": {
          "type": "string",
          "title": "Job Provider Logo",
          "description": "Upload company logo (PNG, JPG, max 5MB)",
          "format": "data-url"
        }
      },
      "required": ["jobProviderName", "jobProviderLocation"]
    },
    "jobDetails": {
      "type": "object",
      "title": "Job Details",
      "x-section": "job-details",
      "properties": {
        "title": {
          "type": "string",
          "title": "Job Title",
          "description": "Job title (editable)",
          "minLength": 1,
          "pattern": "^\\s*\\S+\\s*$"
        },
        "positions": {
          "type": "integer",
          "title": "Number of Openings",
          "description": "How many positions are available?",
          "minimum": 1,
          "default": 1
        },
        "jobDetailsVideo": {
          "type": "string",
          "title": "Job Details Video",
          "format": "data-url",
          "description": "Upload video explaining job details (MOV, AVI, MP4, MKV, WMV, max 50MB)"
        },
        "jobLocationPhotos": {
          "type": "array",
          "title": "Job Location Photos",
          "items": {
            "type": "string",
            "format": "data-url"
          },
          "description": "Upload photos of the job location (PNG, JPEG, JPG, max 5MB each)"
        },
        "workingHoursPerDay": {
          "type": "number",
          "title": "Working Hours Per Day",
          "description": "Enter working hours per day",
          "minimum": 1,
          "maximum": 24
        },
        "minMonthlyInHand": {
          "type": "number",
          "title": "Monthly minimum in-hand salary (INR)",
          "description": "Enter minimum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "maxMonthlyInHand": {
          "type": "number",
          "title": "Monthly maximum in-hand salary (INR)",
          "description": "Enter maximum monthly in-hand salary amount",
          "minimum": 0,
          "maximum": 1000000
        },
        "monthlyPfEsicBenefits": {
          "type": "number",
          "title": "Monthly PF & ESIC Benefits (INR)",
          "description": "Enter monthly PF & ESIC benefits amount",
          "minimum": 0
        },
        "monthlyAverageOT": {
          "type": "string",
          "title": "Monthly Average OT (Overtime) (INR)",
          "description": "Enter monthly average overtime amount"
        },
        "stayProvided": {
          "type": "string",
          "title": "Stay Provided",
          "enum": ["yes-free", "yes-paid", "no"],
          "enumNames": ["Yes - Free", "Yes - Paid", "No"],
          "description": "Select stay option"
        },
        "costPerSharingBed": {
          "type": "string",
          "title": "Cost per Sharing Bed",
          "description": "Enter cost per sharing bed (if stay is paid)"
        }
      },
      "required": ["title", "positions"],
      "dependencies": {
        "stayProvided": {
          "oneOf": [
            {
              "properties": {
                "stayProvided": { "enum": ["yes-paid"] },
                "costPerSharingBed": { "minLength": 1 }
              },
              "required": ["costPerSharingBed"]
            },
            {
              "properties": {
                "stayProvided": { "enum": ["yes-free", "no"] }
              }
            }
          ]
        }
      }
    },
    "jobNeeds": {
      "type": "object",
      "title": "Job Needs",
      "x-section": "job-needs",
      "properties": {
        "ageAllowedLowerLimit": {
          "type": "integer",
          "title": "Age Allowed - Lower Limit",
          "description": "Enter minimum age",
          "minimum": 18,
          "maximum": 100
        },
        "ageAllowedUpperLimit": {
          "type": "integer",
          "title": "Age Allowed - Upper Limit",
          "description": "Enter maximum age",
          "minimum": 18,
          "maximum": 100
        },
        "jukiMachineStraightLineSubsection": {
          "type": "object",
          "title": "Juki Machine - Straight Line Stitch Assessment",
          "x-subsection": "Juki Machine - Straight Line Stitch Assessment",
          "x-ui-subsection": "border",
          "properties": {
            "selectionCriteria": {
              "type": "string",
              "title": "Selection Criteria - Quality",
              "description": "Pass means the candidate is able to stitch straight lines with atleast a 70% accuracy",
              "enum": ["Pass", "Fail"],
              "enumNames": ["Pass", "Fail"]
            },
            "selectionCriteriaTimeAllowed": {
              "type": "number",
              "title": "Selection Criteria - Max. Time Allowed",
              "description": "The highest acceptable time (in minutes) allowed to do the task",
              "minimum": 0
            },
            "uploadSampleMedia": {
              "type": "array",
              "title": "Upload Sample media",
              "description": "Upload reference image",
              "items": {
                "type": "string",
                "format": "data-url"
              },
              "maxItems": 5
            }
          }
        }
      }
    }
  }
}