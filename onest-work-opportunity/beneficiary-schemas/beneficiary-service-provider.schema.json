{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dpg.example.com/schemas/connection/beneficiary-service-provider/state",
  "title": "Beneficiary-Service Provider Connection State",
  "description": "Full internal state for DIRECT_SERVICE connection between Beneficiary and Service Provider (without aggregator)",
  "type": "object",
  "required": ["connection_type", "status", "initiator_id", "initiator_domain", "recipient_id", "recipient_domain"],
  "properties": {
    "connection_type": {
      "type": "string",
      "enum": ["DIRECT_SERVICE"],
      "description": "Direct engagement between beneficiary and service provider without aggregator",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "status": {
      "type": "string",
      "enum": ["pending", "accepted", "rejected", "cancelled"],
      "description": "Current connection status",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "initiator_id": {
      "type": "string",
      "description": "Profile ID of the actor who initiated the connection",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "initiator_domain": {
      "type": "string",
      "enum": ["beneficiary", "service_provider"],
      "description": "Domain of the initiating actor",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "recipient_id": {
      "type": "string",
      "description": "Profile ID of the actor receiving the connection request",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "recipient_domain": {
      "type": "string",
      "enum": ["beneficiary", "service_provider"],
      "description": "Domain of the recipient actor",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "message": {
      "type": "string",
      "description": "Message accompanying the connection request",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["respond"]
      }
    },
    "notes": {
      "type": "string",
      "description": "Private internal notes",
      "x-dpg": {
        "isPrivate": true,
        "encrypt": true
      }
    },
    "internal_rating": {
      "type": "number",
      "description": "Private internal rating",
      "x-dpg": {
        "isPrivate": true,
        "encrypt": true
      }
    },
    "tuneData": {
      "type": "object",
      "description": "Operational details refined during service negotiation",
      "properties": {
        "appointmentType": {
          "type": "string",
          "enum": ["Appointment", "Enrollment", "Walk-in"],
          "description": "Type of service engagement",
          "x-dpg": {
            "isPrivate": false,
            "signalActions": ["tune"]
          }
        },
        "eligibilityReadiness": {
          "type": "string",
          "enum": ["Eligible", "Not eligible", "Pending verification"],
          "description": "Whether the beneficiary meets eligibility requirements",
          "x-dpg": {
            "isPrivate": false,
            "signalActions": ["tune"]
          }
        },
        "deliveryMethod": {
          "type": "string",
          "enum": ["In-person", "Remote", "Hybrid"],
          "description": "How the service will be delivered",
          "x-dpg": {
            "isPrivate": false,
            "signalActions": ["tune"]
          }
        },
        "scheduledDate": {
          "type": "string",
          "format": "date-time",
          "description": "Scheduled appointment or enrollment date",
          "x-dpg": {
            "isPrivate": false,
            "signalActions": ["tune"]
          }
        },
        "prerequisites": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Documents or prerequisites needed before service delivery",
          "x-dpg": {
            "isPrivate": false,
            "signalActions": ["tune"]
          }
        }
      }
    },
    "case_id": {
      "type": "string",
      "description": "Associated case ID for tracking execution",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "milestones": {
      "type": "array",
      "description": "Milestone events tracking individual beneficiary outcome",
      "items": {
        "type": "object",
        "properties": {
          "stage": {
            "type": "string",
            "enum": ["served", "not_served", "completed", "closed"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "notes": { "type": "string" }
        }
      },
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "outcome_status": {
      "type": "string",
      "enum": ["successful", "partially_successful", "unsuccessful", "withdrawn"],
      "description": "Final outcome of the connection",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["broadcast"]
      }
    },
    "outcome_reason": {
      "type": "string",
      "description": "Reason for closure or outcome",
      "x-dpg": {
        "isPrivate": false,
        "signalActions": ["respond"]
      }
    },
    "connected_at": {
      "type": "string",
      "format": "date-time",
      "x-dpg": { "isPrivate": false }
    },
    "closed_at": {
      "type": "string",
      "format": "date-time",
      "x-dpg": { "isPrivate": false }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "x-dpg": { "isPrivate": false }
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "x-dpg": { "isPrivate": false }
    }
  }
}